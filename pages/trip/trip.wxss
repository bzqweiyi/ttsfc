.page {
  padding-bottom: 140rpx;
}

.my-map {
  width: 100%;
  height: 534rpx;
}

.trip-panel {
  background-color: #fff;
}

.trip-panel__hd {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #44455a;
  background-color: #f9f9f9;
}

.trip-panel__hd {}

.trip-media-box {
  padding: 30rpx 30rpx 0;
}

.trip-media-box-panel {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ededf2;
}

.trip-media-box__hd {
  margin-right: 22rpx;
}

.trip-media-box__bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100rpx;
  font-size: 26rpx;
}

.avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.trip-detail-box {
  padding: 30rpx;
  line-height: 48rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #ededf2;
}

.trip-panel__ft {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.page__ft {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-bottom: 0;
  /* reset */
  font-size: 24rpx;
  color: #898a94;
  background-color: #fff;
}

.page__ft-bd {
  flex: 1;
}

.publish-button {
  border-right: 1rpx solid #ededf2;
}


/** 分享图片 **/

.share-dialog-mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.35);
}

.share-dialog {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.share-canvas {
  width: 600rpx;
  height: 900rpx;
  margin-bottom: 40rpx;
}

.share-text {
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 40rpx;
}

.close-icon {
  width: 96rpx;
  height: 96rpx;
}
